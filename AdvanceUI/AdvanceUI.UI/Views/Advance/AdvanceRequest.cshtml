@{
    ViewData["Title"] = "AdvanceRequest";
}
@model AdvanceInsertDTO
<div class="container col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="mt-1">Yeni Avans Talebi</h3>
        </div>
        <div class="card-body">

            <form asp-action="AdvanceRequest" asp-controller="Advance" method="POST">
                <div class="mb-3">
                    <label for="advanceAmount" class="form-label">Avans Miktarı:</label>
                    <input type="number" asp-for="AdvanceAmount" class="form-control" id="advanceAmount" placeholder="Avans Miktarı" required>
                </div>
                <div class="mb-3">
                    <label for="date" class="form-label">İstenilen Tarih:</label>
                    <input type="date" asp-for="DesiredDate" class="form-control" id="date" required>
                </div>
                <div class="mb-3">
                    <label for="project" class="form-label">Projeler:</label>
                    <select class="form-select"  id="project" required>
                        <option value="aProject">A Projesi</option>
                        <option value="bProject">B Projesi</option>
                        <option value="cProject">C Projesi</option>
                        <option value="xProject">X Projesi</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="description" asp-for="AdvanceDescription" class="form-label">Açıklama:</label>
                    <textarea class="form-control" id="description" rows="3" required></textarea>
                </div>
                <input type="submit" class="btn btn-primary">Kaydet</input>
                <input type="reset" class="btn btn-secondary">Vazgeç</input>
            </form>
        </div>
    </div>
</div>